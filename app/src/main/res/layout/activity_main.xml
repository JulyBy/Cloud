<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_external"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>

    <View
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="1dip"></View>


    <com.winton.bottomnavigationview.NavigationView
        android:background="@color/colorLLGray"
        android:id="@+id/nv"
        app:iconSize="25dp"
        app:icon_margin_top="5dp"
        app:text_margin_bottom="5dp"
        app:textSize="10dp"
        app:activeTextColor="@color/colorRed"
        app:unactiveTextColor="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
    </com.winton.bottomnavigationview.NavigationView>


</LinearLayout>
