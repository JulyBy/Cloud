<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<TextView-->
        <!--android:background="@drawable/cricle_bt_bg"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:text="@string/find_recommend"/>-->
    <android.support.v4.view.ViewPager
        android:id="@+id/circle_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"></android.support.v4.view.ViewPager>
    
    <com.ogaclejapan.smarttablayout.SmartTabLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:id="@+id/circle_tab"
        android:layout_gravity="bottom|center_horizontal"
        app:stl_clickable="false"
        app:stl_indicatorColor="@color/colorLLGray"
        app:stl_indicatorCornerRadius="4dp"
        app:stl_indicatorGravity="center"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="8dp"
        ></com.ogaclejapan.smarttablayout.SmartTabLayout>

</LinearLayout>
