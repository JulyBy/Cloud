<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.july.cloudmusic.activity.SplashActivity">

    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorRed" />


    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_title"
        android:textSize="50dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        />


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/lable_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/cloud" />

        <TextView
            android:id="@+id/lable_title"
            android:maxLines="1"
            android:layout_toRightOf="@+id/lable_img"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="网易云音乐"
            />

    </RelativeLayout>


    <!--这个LinearLayout的父类布局是RelativeLayout-->
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="bottom"
            android:id="@+id/bottom_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张文君版权所有"
            android:textSize="10dp"/>

        <TextView
            android:layout_gravity="bottom"
            android:layout_marginLeft="12dp"
            android:id="@+id/bottom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018"
            android:textSize="10dp"/>
    </LinearLayout>



</RelativeLayout>
